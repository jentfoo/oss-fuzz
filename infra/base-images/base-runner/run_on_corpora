cd $OUT

if (( $# > 0 )); then
  FUZZ_TARGETS="$@"
else
  FUZZ_TARGETS="$(find . -maxdepth 1 -type f -executable -printf '%P\n' | \
      grep -v -x -F \
      -e 'llvm-symbolizer' \
      -e 'jazzer_agent_deploy.jar' \
      -e 'centipede' \
      -e 'jazzer_driver' \
      -e 'jazzer_driver_with_sanitizer' \
      -e 'sanitizer_with_fuzzer.so')"
fi

export RUN_FUZZER_MODE=interactive
export AFL_BENCH_JUST_ONE=1
for fuzz_target in $FUZZ_TARGETS; do
  export CORPUS_DIR=/corpus/$fuzz_target
  echo $fuzz_target
  run_fuzzer $fuzz_target
done

# Wait for background processes to finish.
wait
